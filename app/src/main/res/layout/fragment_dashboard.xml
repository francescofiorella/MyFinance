<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.dashboard.DashboardFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.frafio.myfinance.ui.home.dashboard.DashboardViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.isListEmpty == null || !viewModel.isListEmpty ? View.GONE : View.VISIBLE}"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/dashboard_empty_imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/dashboard_empty"
                android:src="@drawable/image_empty_dashboard"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dashboard_emptyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/warning_home"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="21sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dashboard_empty_imageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/dashboard_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="@{viewModel.isListEmpty == null || viewModel.isListEmpty ? View.GONE : View.VISIBLE}"
            tools:visibility="visible">

            <GridLayout
                android:id="@+id/stats_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/budget_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/change_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_swap_horiz_filled"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisMonth_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:text="@string/this_month"
                            android:textSize="@dimen/card_title_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisMonth_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/card_price_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/thisMonth_TV_title"
                            tools:text="€ 0.00" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/on_budget_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/card_half_margin"
                            android:fontFamily="@font/nunito"
                            android:text="@string/on_total_budget"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/thisMonth_TV"
                            tools:text="/ 0.00" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/monthly_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <include
                            android:id="@+id/monthly_barChartLayout"
                            layout="@layout/layout_progress_bar_chart"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="25dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/monthly_guideline"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_half_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/todayTot_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/expenses_today"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/todayTot_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_half_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisYear_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/this_year_next"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisYear_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/balance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/balance_next_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_keyboard_arrow_right_filled"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/balance_previous_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_keyboard_arrow_left_filled"
                            app:layout_constraintEnd_toStartOf="@id/balance_next_btn"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/balance_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:text="@string/annual_balance"
                            android:textSize="@dimen/card_title_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/balance_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/card_price_size"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/balance_TV_title"
                            tools:text="€ 0.00" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunito"
                            android:maxLines="1"
                            android:text="@string/incomes"
                            android:textSize="@dimen/card_title_size"
                            app:layout_constraintEnd_toEndOf="@id/balance_incomes_TV"
                            app:layout_constraintStart_toStartOf="@id/balance_incomes_TV"
                            app:layout_constraintTop_toBottomOf="@id/balance_TV" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/balance_incomes_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="@id/balance_guideline"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv1"
                            tools:text="€ 0.00" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunito"
                            android:text="@string/expenses"
                            android:textSize="@dimen/card_title_size"
                            app:layout_constraintEnd_toEndOf="@id/balance_expenses_TV"
                            app:layout_constraintStart_toStartOf="@id/balance_expenses_TV"
                            app:layout_constraintTop_toBottomOf="@id/balance_TV" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/balance_expenses_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/balance_guideline"
                            app:layout_constraintTop_toBottomOf="@id/tv2"
                            tools:text="€ 0.00" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/balance_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:text="@string/monthly_expenses"
                            android:textSize="@dimen/card_title_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/bar_chart_next_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_keyboard_arrow_right_filled"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/bar_chart_previous_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_keyboard_arrow_left_filled"
                            app:layout_constraintEnd_toStartOf="@id/bar_chart_next_btn"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.compose.ui.platform.ComposeView
                            android:id="@+id/monthly_chart"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView10" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/dashboard_bottom_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/pie_chart_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:text="@string/expenses_by_category"
                            android:textSize="@dimen/card_title_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="@id/pie_chart_title"
                            app:layout_constraintTop_toBottomOf="@id/pie_chart_title"
                            app:selectionRequired="true"
                            app:singleLine="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/monthly_chip"
                                style="@style/Widget.MyFinance.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/monthly"
                                app:checkedIconEnabled="false" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/annual_chip"
                                style="@style/Widget.MyFinance.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/annual"
                                app:checkedIconEnabled="false" />

                        </com.google.android.material.chip.ChipGroup>

                        <ImageView
                            android:id="@+id/pie_chart_next_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_keyboard_arrow_right_filled"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/pie_chart_previous_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_keyboard_arrow_left_filled"
                            app:layout_constraintEnd_toStartOf="@id/pie_chart_next_btn"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.compose.ui.platform.ComposeView
                            android:id="@+id/pie_chart_compose_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/chip_group"
                            tools:layout_height="238dp"
                            tools:layout_width="238dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunito"
                            android:text="@string/shown"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/pie_chart_compose_view" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/dataShownTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/nunito"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/tv0"
                            app:layout_constraintStart_toEndOf="@id/tv0"
                            app:layout_constraintTop_toTopOf="@id/tv0"
                            tools:text="Month Year" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

        </ScrollView>

    </LinearLayout>

</layout>