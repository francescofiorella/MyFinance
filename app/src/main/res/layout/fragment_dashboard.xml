<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.dashboard.DashboardFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.frafio.myfinance.ui.home.dashboard.DashboardViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fragment_margin_top"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.purchaseListSize == 0 ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/dashboard_empty_imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/dashboard_empty"
                android:src="@drawable/image_empty_dashboard"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dashboard_emptyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/warning_home"
                android:textAlignment="center"
                android:textColor="@color/primary_text"
                android:textSize="21sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dashboard_empty_imageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/dashboard_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="@{viewModel.purchaseListSize == 0 ? View.GONE : View.VISIBLE}"
            tools:visibility="visible">

            <GridLayout
                android:id="@+id/stats_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/change_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/change_content"
                            android:src="@drawable/ic_swap_horiz"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisMonth_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:text="@string/this_month"
                            android:textSize="@dimen/card_title_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisMonth_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/card_price_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/thisMonth_TV_title"
                            tools:text="€ 0.00" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/slash_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/card_half_margin"
                            android:fontFamily="@font/nunito"
                            android:text="/ "
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/thisMonth_TV" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/budget_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/slash_TV"
                            app:layout_constraintTop_toBottomOf="@id/thisMonth_TV"
                            tools:text="0.00" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/monthly_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/percentageTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bg_round_custom"
                            android:backgroundTint="?attr/colorSecondaryContainer"
                            android:fontFamily="@font/nunito"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="3dp"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@id/progress_bar_back"
                            app:layout_constraintEnd_toEndOf="@id/progress_bar_front"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            tools:text="0%" />

                        <View
                            android:id="@+id/progress_bar_back"
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_marginStart="25dp"
                            android:background="@drawable/bg_round_corners"
                            android:backgroundTint="?attr/colorSecondaryContainer"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/monthly_guideline"
                            app:layout_constraintTop_toBottomOf="@id/percentageTV" />

                        <View
                            android:id="@+id/progress_bar_front"
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:background="@drawable/bg_round_corners"
                            android:backgroundTint="?attr/colorPrimary"
                            app:layout_constraintBottom_toBottomOf="@id/progress_bar_back"
                            app:layout_constraintEnd_toEndOf="@id/progress_bar_back"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@id/progress_bar_back"
                            app:layout_constraintTop_toTopOf="@id/progress_bar_back"
                            tools:layout_width="60dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_half_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/todayTot_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/today"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/todayTot_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:text="@{viewModel.todayTotString}"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_half_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    android:clipToPadding="false"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/monthAvg_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/avg_month"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/monthAvg_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:text="@{viewModel.monthAvgString}"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_half_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisYear_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/this_year_next"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/thisYear_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_half_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/card_half_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/ticketTot_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/total_rent"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/ticketTot_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:text="@{viewModel.rentTotString}"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_full_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_half_margin"
                    android:layout_marginBottom="@dimen/dashboard_bottom_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/trenTot_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/total_shopping"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/trenTot_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:text="@{viewModel.shoppingTotString}"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="@dimen/card_half_margin"
                    android:layout_marginTop="@dimen/card_half_margin"
                    android:layout_marginEnd="@dimen/card_full_margin"
                    android:layout_marginBottom="@dimen/dashboard_bottom_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/amTot_TV_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunito"
                            android:text="@string/total_transport"
                            android:textSize="@dimen/card_title_size" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/amTot_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/card_text_space"
                            android:fontFamily="@font/nunito_semibold"
                            android:maxLines="1"
                            android:text="@{viewModel.transportTotString}"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/card_price_size"
                            tools:text="€ 0.00" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

        </ScrollView>

    </LinearLayout>

</layout>

